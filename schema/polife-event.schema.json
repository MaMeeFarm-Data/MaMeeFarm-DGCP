{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PoLIFE Event",
  "description": "Schema for real-life events recorded in DGCP.",
  "type": "object",
  "properties": {
    "date": { "type": "string", "format": "date" },
    "temperature_c": { "type": "number" },
    "event": { "type": "string" },
    "notes": { "type": "string" }
  },
  "required": ["date", "event"],
  "additionalProperties": false
}
